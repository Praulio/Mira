# Clerk Auth Keys
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Clerk Webhook Secret
# Get this from Clerk Dashboard > Webhooks > Add Endpoint
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Database (Neon Postgres)
# Get this from https://console.neon.tech
DATABASE_URL=your_neon_database_url_here

# Google Drive Integration (for attachments)
# Service Account credentials JSON (base64 encoded or escaped JSON string)
# Get this from Google Cloud Console > IAM & Admin > Service Accounts
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"..."}

# Root folder ID in Google Drive where Mira will store attachments
# Create a folder in Drive and share it with your Service Account email
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_here

# Cron Job Security
# Secret token to validate Vercel cron job requests
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here
